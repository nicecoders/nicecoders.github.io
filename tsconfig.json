{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@@/*": ["src/.umi/*"],
      "@packages": ["packages/*"]
    },
    "typeRoots": ["./typings"]
  },
  "include": ["./typings.d.ts", "packages/**/*.tsx", "packages/**/*.ts"],
  "exclude": ["node_modules", "lib", "es", "dist", "typings"]
}
