{
  "name": "nicecode",
  "version": "0.2.0",
  "scripts": {
    "cz": "git add . && git cz",
    "init": "rm -rf node_modules && npm install && npm run clean && npm run bootstrap && npm run build",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "publish": "lerna publish",
    "build": "lerna run build",
    "release": "npm run build && npm publish",
    "start": "dumi dev",
    "docs:build": "NODE_ENV=production dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:update": "umi-test --updateSnapshot",
    "test:coverage": "umi-test --coverage",
    "log": "conventional-changelog --config ./packages/changelog -i README.md -s -r 0"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "typings": "dist/index.d.ts",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./packages/commit"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@nicecode/commit-lint": "^0.0.9",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/jest": "^25.1.2",
    "@umijs/test": "^3.3.4",
    "commitizen": "^4.2.4",
    "commitlint": "^12.1.4",
    "conventional-changelog-cli": "^2.1.1",
    "dumi": "^1.0.10",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "gh-pages": "^3.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-test-renderer": "^17.0.2"
  }
}
